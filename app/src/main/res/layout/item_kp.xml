<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="0dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:id="@+id/gambarbuku"
                android:src="@drawable/pdf"/>

            <TextView
                android:id="@+id/judulkp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginEnd="81dp"
                android:layout_toEndOf="@+id/gambarbuku"
                android:text="@string/judul_kp"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_below="@+id/judulkp"
                android:layout_toRightOf="@+id/gambarbuku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halaman"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="7dp"
                android:id="@+id/tvhalaman"/>

            <TextView
                android:id="@+id/tvupload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvhalaman"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/gambarbuku"
                android:gravity="center_vertical"
                android:text="Pengarang"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvabstrak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvupload"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/gambarbuku"
                android:gravity="center_vertical"
                android:text="Abstrak"
                android:maxLength="100"
                android:textSize="12sp" />
            <ImageView
                android:layout_marginLeft="6dp"
                android:id="@+id/btndownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>